    <style>
        .first {
    width: 100%;
    height: 1000px;
    background: #ccc;
}

.second {
    width: 100%;
    height: 1000px;
    background: #999;
}
.panel {
    width: 50px;
    height: 50px;
    background-color: white;
display: block;
    position: relative;
    margin: auto;
    border: #999 2px solid;
    border-radius: 5px;
    transition: all 0.5s ease-in-out;

}
.inner {
    position: absolute;
    width: 100%;
    height: 5px;
    background-color: black;
    border-radius: 5px;
    top: 49%;
    left: 0;
    transition: all 0.5s ease-in-out;
}
.inner::after {
        position: absolute;
    width: 100%;
    height: 5px;
    background-color: black;
    border-radius: 5px;
    top: -7px;
    left: 0;
    content: '';
    transition: all 0.5s ease-in-out;

}
.inner::before {
        position: absolute;
    width: 100%;
    height: 5px;
    background-color: black;
    border-radius: 5px;
    top: 7px;
    left: 0;
    transition: all 0.5s ease-in-out;
    
    content: '';
}
.inners {
    position: absolute;
    width: 100%;
    height: 5px;
    background-color: black;
    border-radius: 5px;
    top: 49%;
    left: 0;
    transition: all 0.5s ease-in-out;

}
.inners::after {
        position: absolute;
    width: 50%;
    height: 5px;
    background-color: black;
    border-radius: 5px;
    top: -7px;
    left: 0;
    content: '';
    transform: rotate(147deg);
    transition: all 0.5s ease-in-out;

}
.inners::before {
        position: absolute;
    width: 50%;
    height: 5px;
    background-color: black;
    border-radius: 5px;
    top: 7px;
    left: 0;
    content: '';
    transform: rotate(31deg);
    transition: all 0.5s ease-in-out;

}
body {
